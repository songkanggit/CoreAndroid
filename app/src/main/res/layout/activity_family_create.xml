<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateFamilyActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar"/>
    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f1f1f1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您是第一次登陆，请完善信息，可立即获得"
            android:textSize="16sp"
            android:textColor="#818ACC"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/round_login_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mine_sunshine_icn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="100"
                android:textColor="#ffd300"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f6f6f7"
        android:paddingTop="15dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/ll_tips">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="我的昵称"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入您的昵称"
                android:textColor="#B0B0DA"
                android:textSize="15sp"
                android:paddingStart="15dp"
                android:background="@drawable/round_login_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="我的头像"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/avatar_add_icn"
                android:scaleType="center"
                android:background="@drawable/round_login_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="宝宝昵称"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入宝宝昵称"
                android:textColor="#B0B0DA"
                android:textSize="15sp"
                android:paddingStart="15dp"
                android:background="@drawable/round_login_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="宝宝生日"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入宝宝昵称"
                android:textColor="#B0B0DA"
                android:textSize="15sp"
                android:paddingStart="15dp"
                android:background="@drawable/round_login_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="宝宝性别"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#818ACC"
                    android:textSize="16sp"
                    android:checked="true"
                    android:enabled="true"
                    android:text="男宝"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="#818ACC"
                    android:textSize="16sp"
                    android:text="女宝"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/PersonalInfoTextViewStyle"
                android:text="我的称谓"/>
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:gravity="center"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/addbaby_icn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818ACC"
                android:textSize="16sp"
                android:text="添加宝宝"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="提交"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/login_text_view_bg"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>