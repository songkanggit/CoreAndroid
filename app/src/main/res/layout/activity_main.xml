<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.guohe.corecenter.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="25dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@mipmap/scan_icn"
                android:layout_gravity="left"
                android:background="?attr/selectableItemBackground"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/grey_bg"
                android:drawableRight="@mipmap/search_icn"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="13sp"
                android:hint="@string/main_activity_top_hint"/>
            <ImageView
                android:id="@+id/iv_group"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@mipmap/toolbar_right"
                android:layout_gravity="right"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <LinearLayout
            style="@style/MainLinearLayoutStyle">
            <TextView
                android:id="@+id/tv_follow"
                style="@style/TopTitleImageStyle"
                android:text="@string/main_activity_title_0" />
            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:src="@mipmap/bg_arrow"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MainLinearLayoutStyle">
            <TextView
                android:id="@+id/tv_recommend"
                style="@style/TopTitleImageStyle"
                android:text="@string/main_activity_title_1"
                android:textColor="#818ACC"
                android:textSize="17sp" />
            <ImageView
                android:id="@+id/iv_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@mipmap/bg_arrow"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MainLinearLayoutStyle">
            <TextView
                android:id="@+id/tv_hot"
                style="@style/TopTitleImageStyle"
                android:text="@string/main_activity_title_2" />
            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:src="@mipmap/bg_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/main_fl_bg"
        app:layout_constraintTop_toBottomOf="@id/ll_nav">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/bt_gl"
            style="@style/BottomButtonStyle"
            android:drawableTop="@mipmap/guoli_pre"
            android:text="@string/main_activity_bar_first"/>
        <Button
            android:id="@+id/bt_gh"
            style="@style/BottomButtonStyle"
            android:drawableTop="@mipmap/guohe"
            android:text="@string/main_activity_bar_second"/>
        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@mipmap/add_icn"
            android:background="?attr/selectableItemBackground"/>
        <Button
            android:id="@+id/bt_shop"
            style="@style/BottomButtonStyle"
            android:drawableTop="@mipmap/shangcheng"
            android:text="@string/main_activity_bar_third"/>
        <Button
            android:id="@+id/bt_mine"
            style="@style/BottomButtonStyle"
            android:drawableTop="@mipmap/wode"
            android:text="@string/main_activity_bar_forth"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
