<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_leaves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tree_leaves1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/iv_branch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@mipmap/tree_branch1"
        app:layout_constraintLeft_toRightOf="@id/iv_trunk"
        app:layout_constraintTop_toTopOf="@id/iv_leaves"/>
    <ImageView
        android:id="@+id/iv_branch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@mipmap/tree_branch2"
        app:layout_constraintRight_toLeftOf="@id/iv_trunk"
        app:layout_constraintTop_toBottomOf="@id/iv_branch1"/>

    <ImageView
        android:id="@+id/iv_trunk"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@mipmap/tree_trunk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>