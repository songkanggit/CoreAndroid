<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f7"
    tools:context=".activity.LoginActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="请登录"
        android:textColor="#818ACC"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_login_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#818ACC"
        android:text="-  手机号码登录  -"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>
    <LinearLayout
        android:id="@+id/ll_telephone"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_login_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_tip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="#6E6D9D"
            android:textSize="17sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#B0B0DA"
            android:gravity="left"
            android:inputType="phone"
            android:hint="请输入手机号码"
            android:background="@null"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_pass_code"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:background="@drawable/round_login_bg"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_telephone">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:inputType="number"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="#B0B0DA"
            android:hint="请输入验证码"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/pass_code_text_view_bg"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="291dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="登录"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/login_text_view_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_pass_code"/>

    <TextView
        android:id="@+id/tv_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#818ACC"
        android:text="-  社交账号登录  -"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_social">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/qq_icn" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_icn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>